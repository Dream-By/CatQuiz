<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AnswersActivity">

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"

            android:padding="24dp"
            android:text="Вы уверены?"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.259" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="Ответ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id='@+id/textViewAnswer'
            android:padding="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.247"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Показать правильный ответ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonShowAnswer"
            app:layout_constraintTop_toBottomOf="@+id/textViewAnswer"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>